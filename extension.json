{
  "name": "MCBBSWikiUtils",
  "author": "Litwak913",
  "url": "https://github.com/mcbbs-wiki/MW-Utils",
  "description": "MCBBS Wiki Utils",
  "version": "1.0",
  "requires": {
    "MediaWiki": ">= 1.31.0"
  },
  "license-name": "GPL-2.0-or-later",
  "type": "other",
  "manifest_version": 1,
  "AutoloadNamespaces": {
    "MCBBSWiki\\": "includes/"
  },
  "Hooks": {
    "SkinAddFooterLinks": "MCBBSWiki\\Hooks::customFooter",
    "ParserFirstCallInit": "MCBBSWiki\\Hooks::onParserFirstCallInit"
  },
  "MessagesDirs": {
    "MCBBSWikiUtils": ["i18n"]
  },
  "ResourceModules": {
    "ext.mcbbswikiutils.credit": {
      "packageFiles": ["credit.js","highcharts.vendor.js"],
      "targets":["desktop", "mobile"]
    },
    "ext.mcbbswikiutils.avatar": {
      "styles": "avatar.css",
      "targets":["desktop", "mobile"]
    }
  },
  "ResourceFileModulePaths": {
		"localBasePath": "resources",
		"remoteExtPath": "MCBBSWikiUtils/resources"
	}
}
